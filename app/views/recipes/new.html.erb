<%= form_for @recipe do |f| %>

<p class='forms'>
  <%= f.label :name, 'タイトル' %><br>
  <%= f.text_field :name, id: "title_input" %>
</p>

<p class='forms'>
  <%= f.label :content, '材料・作り方' %><br>
  <%= f.text_area :content, id: "content_input" %>
</p>

<p class="forms">
    <%= f.file_field :photo, id: 'file_select'%>
</p>

<p class='forms'>
  <%= f.submit "投稿する", id: 'submit_button' %>
</p>

<% end %>
